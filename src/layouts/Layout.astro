---
import Navigation from '../components/Navigation.astro';
import '../styles/global.css';
import '../styles/theme.css';

interface Props {
  title: string;
  image?: string;
}

const { title, image } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/global.css" />
  </head>
  <body>
    <header style={image ? `background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(${image}); background-size: cover; background-position: center; background-repeat: no-repeat; height: 300px;` : ''}>
      {/* Se elimina el t√≠tulo del header */}
    </header>
    <Navigation />
    <slot />
  </body>
</html>
