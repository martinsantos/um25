---
import Layout from '../layouts/Layout.astro';
import BlogSEO from './BlogSEO.astro';
import OptimizedImage from './OptimizedImage.astro';
import BlogSidebar from './BlogSidebar.astro';
import Comments from './Comments.astro';
import { formatDate } from '../utils/date';

interface Props {
    post: any;
}

const { post } = Astro.props;

const shareUrl = new URL(Astro.url.pathname, Astro.site).toString();
const shareText = `Lee "${post.title}" en Última Milla`;
---

<Layout title={`${post.title} | Blog | Última Milla`}>
    <BlogSEO
        title={post.title}
        description={post.description || post.excerpt}
        image={post.image}
        post={post}
        isArticle={true}
    />
    
    <main class="container mx-auto px-4 py-12">
        <div class="max-w-7xl mx-auto">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
                <!-- Contenido Principal -->
                <div class="lg:col-span-2">
                    <article class="prose prose-lg max-w-none">
                        <h1 class="text-4xl font-bold mb-4">{post.title}</h1>
                        
                        <div class="flex items-center gap-4 text-gray-600 mb-8">
                            <time datetime={post.date}>
                                {formatDate(post.date)}
                            </time>
                            {post.author && (
                                <span>por {post.author}</span>
                            )}
                        </div>

                        {post.image && (
                            <div class="mb-8">
                                <OptimizedImage
                                    src={post.image}
                                    alt={post.title}
                                    class="rounded-lg w-full"
                                />
                            </div>
                        )}

                        <div class="mb-8">
                            <slot />
                        </div>

                        <!-- Categorías -->
                        {post.categories && post.categories.length > 0 && (
                            <div class="flex flex-wrap gap-2 mb-8">
                                {post.categories.map((category: string) => (
                                    <a
                                        href={`/blog?category=${category}`}
                                        class="px-3 py-1 bg-gray-100 rounded-full text-sm hover:bg-primary-100 hover:text-primary-700 transition-colors"
                                    >
                                        {category}
                                    </a>
                                ))}
                            </div>
                        )}

                        <!-- Botones de compartir -->
                        <div class="flex items-center gap-4 mb-8">
                            <span class="text-gray-600">Compartir:</span>
                            <div class="flex gap-2">
                                <a
                                    href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(shareText)}&url=${encodeURIComponent(shareUrl)}`}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="text-gray-600 hover:text-primary-600 transition-colors"
                                    aria-label="Compartir en Twitter"
                                >
                                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84" />
                                    </svg>
                                </a>
                                <a
                                    href={`https://www.linkedin.com/shareArticle?mini=true&url=${encodeURIComponent(shareUrl)}&title=${encodeURIComponent(post.title)}`}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="text-gray-600 hover:text-primary-600 transition-colors"
                                    aria-label="Compartir en LinkedIn"
                                >
                                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
                                    </svg>
                                </a>
                            </div>
                        </div>

                        <!-- Comentarios -->
                        <Comments postId={post.slug} />
                    </article>
                </div>

                <!-- Barra lateral -->
                <div class="lg:col-span-1">
                    <BlogSidebar currentPost={post} />
                </div>
            </div>
        </div>
    </main>
</Layout>
