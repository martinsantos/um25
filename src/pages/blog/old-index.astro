---
import Layout from '../../layouts/Layout.astro';
import BlogSearch from '../../components/BlogSearch.astro';
import OptimizedImage from '../../components/OptimizedImage.astro';
import { getAllPosts, getCategories, getPostsByFilters } from '../../data/blog-posts';
import type { BlogPost, BlogCategory } from '../../types/blog';
import { formatDate } from '../../utils/date';

// Obtener parámetros de la URL
const { searchParams } = Astro.url;
const currentPage = Number(searchParams.get('page')) || 1;
const category = searchParams.get('category') || '';
const tag = searchParams.get('tag') || '';
const searchQuery = searchParams.get('q') || '';

// Obtener posts filtrados y paginados
const filters = {
    category,
    tag,
    searchQuery,
    page: currentPage,
    limit: 9
};

const { posts, totalResults, totalPages } = getPostsByFilters(filters);
const categories = getCategories();

// Metadatos de la página
const title = category 
    ? `${category} - Blog | Última Milla`
    : tag
    ? `${tag} - Blog | Última Milla`
    : 'Blog | Última Milla';

const description = category
    ? `Artículos sobre ${category.toLowerCase()} en el blog de Última Milla`
    : tag
    ? `Artículos etiquetados con ${tag.toLowerCase()} en el blog de Última Milla`
    : 'Explora nuestros artículos sobre tecnología, servicios IT, cloud computing, ciberseguridad y más.';
---

<Layout title={title} description={description}>
    <main class="container mx-auto px-4 py-12">
        <div class="max-w-4xl mx-auto mb-12">
            <h1 class="text-4xl font-bold text-center mb-8">Blog</h1>
            <BlogSearch />
        </div>

        <!-- Filtros activos -->
        {(category || tag || searchQuery) && (
            <div class="flex flex-wrap gap-2 mb-8 justify-center">
                {category && (
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-primary-100 text-primary-700">
                        Categoría: {category}
                        <a href="/blog" class="ml-2 hover:text-primary-900">
                            <svg class="w-4 h-4" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                            </svg>
                        </a>
                    </span>
                )}
                {tag && (
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-primary-100 text-primary-700">
                        Tag: {tag}
                        <a href="/blog" class="ml-2 hover:text-primary-900">
                            <svg class="w-4 h-4" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                            </svg>
                        </a>
                    </span>
                )}
                {searchQuery && (
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-primary-100 text-primary-700">
                        Búsqueda: {searchQuery}
                        <a href="/blog" class="ml-2 hover:text-primary-900">
                            <svg class="w-4 h-4" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                            </svg>
                        </a>
                    </span>
                )}
            </div>
        )}

        <!-- Grid de posts -->
        {posts.length > 0 ? (
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {posts.map((post, index) => (
                    <article 
                        class={`bg-white rounded-lg shadow-lg overflow-hidden transition-transform hover:scale-105
                            ${index === 0 && currentPage === 1 ? 'md:col-span-2 lg:col-span-3' : ''}`}
                    >
                        <a href={`/blog/${post.slug}`} class="block">
                            <div class="relative">
                                <OptimizedImage
                                    src={post.image}
                                    alt={post.title}
                                    class="w-full h-48 object-cover"
                                />
                                {post.category && (
                                    <span class="absolute top-4 right-4 bg-primary-500 text-white px-3 py-1 rounded-full text-sm">
                                        {post.category}
                                    </span>
                                )}
                            </div>
                            <div class="p-6">
                                <div class="flex items-center text-sm text-gray-500 mb-2">
                                    <time datetime={post.date}>{formatDate(post.date)}</time>
                                    <span class="mx-2">•</span>
                                    <span>{post.readTime} min lectura</span>
                                </div>
                                <h2 class="text-xl font-semibold mb-2 hover:text-primary-500 transition-colors">
                                    {post.title}
                                </h2>
                                <p class="text-gray-600 mb-4 line-clamp-2">
                                    {post.excerpt}
                                </p>
                                <div class="flex items-center justify-between">
                                    <div class="flex items-center space-x-3">
                                        <img
                                            src={post.authorImage}
                                            alt={post.author}
                                            class="w-8 h-8 rounded-full object-cover"
                                        />
                                        <div class="text-sm">
                                            <p class="font-semibold">{post.author}</p>
                                            <p class="text-gray-500">{post.authorRole}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </article>
                ))}
            </div>
        ) : (
            <div class="text-center py-12">
                <h2 class="text-2xl font-semibold text-gray-900 mb-4">No se encontraron artículos</h2>
                <p class="text-gray-600 mb-8">
                    {searchQuery
                        ? `No hay resultados para "${searchQuery}"`
                        : category
                        ? `No hay artículos en la categoría "${category}"`
                        : tag
                        ? `No hay artículos con la etiqueta "${tag}"`
                        : 'No hay artículos disponibles en este momento'}
                </p>
                <a
                    href="/blog"
                    class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary-600 hover:bg-primary-700"
                >
                    Ver todos los artículos
                </a>
            </div>
        )}

        <!-- Paginación -->
        {totalPages > 1 && (
            <div class="flex justify-center gap-2 mt-12">
                {currentPage > 1 && (
                    <a
                        href={`/blog?page=${currentPage - 1}${category ? `&category=${category}` : ''}${tag ? `&tag=${tag}` : ''}${searchQuery ? `&q=${searchQuery}` : ''}`}
                        class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50"
                    >
                        Anterior
                    </a>
                )}
                
                {Array.from({ length: totalPages }, (_, i) => i + 1).map(page => (
                    <a
                        href={`/blog?page=${page}${category ? `&category=${category}` : ''}${tag ? `&tag=${tag}` : ''}${searchQuery ? `&q=${searchQuery}` : ''}`}
                        class={`px-4 py-2 text-sm font-medium rounded-md ${
                            currentPage === page
                                ? 'bg-primary-600 text-white'
                                : 'text-gray-700 bg-white border border-gray-300 hover:bg-gray-50'
                        }`}
                    >
                        {page}
                    </a>
                ))}
                
                {currentPage < totalPages && (
                    <a
                        href={`/blog?page=${currentPage + 1}${category ? `&category=${category}` : ''}${tag ? `&tag=${tag}` : ''}${searchQuery ? `&q=${searchQuery}` : ''}`}
                        class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50"
                    >
                        Siguiente
                    </a>
                )}
            </div>
        )}
    </main>
</Layout>

<style>
.line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}
</style>
