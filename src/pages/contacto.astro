								</svg>
							</a>
							<a href="#" class="text-gray-300 hover:text-white">
								<svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
									<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
								</svg>
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</Layout>

<script>
	const form = document.getElementById('contactForm') as HTMLFormElement;
	const successMessage = document.getElementById('successMessage');
	const errorMessage = document.getElementById('errorMessage');
	const errorElements = {
		name: document.getElementById('nameError'),
		email: document.getElementById('emailError'),
		subject: document.getElementById('subjectError'),
		message: document.getElementById('messageError')
	};

	// Función para validar email
	function isValidEmail(email: string) {
		const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
		return re.test(email);
	}

	// Función para mostrar errores
	function showError(field: keyof typeof errorElements, message: string) {
		const errorElement = errorElements[field];
		if (errorElement) {
			errorElement.textContent = message;
			errorElement.classList.remove('hidden');
		}
	}

	// Función para limpiar errores
	function clearErrors() {
		Object.values(errorElements).forEach(element => {
			if (element) {
				element.textContent = '';
				element.classList.add('hidden');
			}
		});
		successMessage?.classList.add('hidden');
		errorMessage?.classList.add('hidden');
	}

	if (form) {
		form.addEventListener('submit', async (e) => {
			e.preventDefault();
			clearErrors();

			const formData = new FormData(form);
			const data = Object.fromEntries(formData);
			let hasErrors = false;

			// Validaciones
			if (!data.name) {
				showError('name', 'El nombre es requerido');
				hasErrors = true;
			}

			if (!data.email) {
				showError('email', 'El email es requerido');
				hasErrors = true;
			} else if (!isValidEmail(data.email.toString())) {
				showError('email', 'Por favor ingresa un email válido');
				hasErrors = true;
			}

			if (!data.subject) {
				showError('subject', 'Por favor selecciona un asunto');
				hasErrors = true;
			}

			if (!data.message) {
				showError('message', 'El mensaje es requerido');
				hasErrors = true;
			}

			if (hasErrors) return;

			try {
				const response = await fetch('/api/contact', {
					method: 'POST',
					headers: {
						'Content-Type': 'application/json',
					},
					body: JSON.stringify(data),
				});

				const result = await response.json();

				if (response.ok) {
					if (successMessage) {
						successMessage.classList.remove('hidden');
						form.reset();
					}
				} else {
					throw new Error(result.message || 'Error al enviar el mensaje');
				}
			} catch (error) {
				if (errorMessage) {
					errorMessage.classList.remove('hidden');
					errorMessage.textContent = error instanceof Error ? error.message : 'Error al enviar el mensaje';
				}
			}
		});
	}
</script>
