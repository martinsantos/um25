		];
		let currentIndex = 0;
		let isDeleting = false;
		let dynamicText = '';
		const textElement = document.getElementById('dynamicText');

		function handleTyping() {
			const currentText = textArray[currentIndex % textArray.length];
			if (!isDeleting) {
				dynamicText = currentText.substring(0, dynamicText.length + 1);
				if (dynamicText === currentText) {
					setTimeout(() => {
						isDeleting = true;
					}, 1000);
				}
			} else {
				dynamicText = currentText.substring(0, dynamicText.length - 1);
				if (dynamicText === '') {
					isDeleting = false;
					currentIndex++;
				}
			}
			if (textElement) {
				textElement.textContent = dynamicText;
			}
			setTimeout(handleTyping, isDeleting ? 50 : 150);
		}

		// Iniciar el efecto de escritura
